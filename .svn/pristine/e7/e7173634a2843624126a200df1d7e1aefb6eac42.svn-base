@charset "utf-8";
/*水信息气象页-CSS样式表 */
* {
    margin: 0;
    padding: 0;
}

body {
    font-size: 14px;
    font-family: Microsoft YaHei;
    background: #F2F5F7;
    overflow: hidden;
 
}

iframe {
    border: none;
}

p, h1, h2, h3, h4, h5, p, ul, li, dl, dt, dd {
    margin: 0px;
    padding: 0px;
    list-style-type: none;
}

ul, li {
    margin: 0px;
    padding: 0px;
    list-style-type: none;
}

a {
    text-decoration: none;
}

a:hover {
    opacity: 0.8;
}

img {
    border: none;
}

select, input[type="text"] {
    height: 28px;
    border: solid 1px #acd5ff;
    border-radius: 4px;
}

button {
    width: 80px;
    height: 26px;
    background: #0373FF;
    border: none;
    color: #fff;
    border-radius: 2px;
    cursor: pointer;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.clear {
    clear: both;
}

/*滚动条*/
::-webkit-scrollbar-button {
    height: 0;
    width: 0;
    display: none;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-track, ::-webkit-scrollbar-thumb {
    border: 0;
}

::-webkit-scrollbar {
    height: 8px;
    width: 8px;
    background: transparent;
    border-radius: 5px;
}

::-webkit-scrollbar-thumb {
    padding-top: 100px;
    -webkit-box-shadow: inset 1px 1px 0 rgba(78, 160, 245, .1), inset -1px -1px 0 rgba(78, 160, 245, .07);
    background-color: #0373FF;
    min-height: 28px;
    border-radius: 4px;
    background-clip: padding-box;
}

::-webkit-scrollbar-track, ::-webkit-scrollbar-thumb {
    border: 0;
}

::-webkit-scrollbar-thumb:hover {
    -webkit-box-shadow: inset 1px 1px 1px rgba(78, 160, 245, .25);
    background-color: rgba(78, 160, 245, .7);
}

::-webkit-scrollbar-thumb:active {
    -webkit-box-shadow: inset 1px 1px 3px rgba(78, 160, 245, .35);
    background-color: rgba(78, 160, 245, .7);
}

.main {
    float: left;
    width: 100%;
    height: 100%;
    position: absolute;
}

.right {
    float: right;
    width: 145px;
    height: 100%;
    padding: 5px;
    background: #F2F5F7;
}

.right-body {
    width: 100%;
    height: 100%;
    border-radius: 4px;
    overflow: hidden;
}

.left {
    height: 100%;
    margin: 0px 160px 0px 0px;
    background: #fff;
    overflow: hidden;
}

.leftMain {
    position: relative;
    display: inline-block;
}

.imgBlock {
    cursor: move;
    position: relative;
    display: inline-block;
}

#img {
    display: block;
    border: 0;
}

.nav_left {
    float: left;
    width: 160px;
    height: 100%;
    padding: 5px;
    background: #F2F5F7;
}

.nav_left .iconfont{
    float: right;
    color: #0D79EF;
    font-size: 12px;
}

.newico {
    width: 16px;
    height: 70px;
    cursor: pointer;
    background: url(../image/img/sjxleft.png) center no-repeat rgba(78, 160, 245, 0.6);
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
}

.newico.hover {
    background-image: url(../image/img/sjxright.png);
}

.nav {
    width: 100%;
    height: 100%;
    border-radius: 4px;
    overflow-x: hidden;
    overflow-y: auto;
}

.nav > ul > li:first-child {
    border-top: 1px solid #E1E1E1;
}

.nav > ul > li > a {
    display: block;
    text-indent: 12px;
    color: #222;
    font-size: 14px;
    height: 32px;
    line-height: 32px;
    position: relative;
    padding: 4px 10px 2px 10px;
    font-weight: bold;
    border-bottom: 1px solid #E1E1E1;
}

.nav > ul > li .inactive img {
    vertical-align: baseline;
    margin-right: 8px;
}

.nav > ul > li .inactives {
    /*background: #f3f3f3;*/
    border-right: 3px solid #0d79ef;
}

.nav > ul > li > ul {
    display: none;
    background: #fff;
    margin: 10px 0px 0px 25px;
}

.nav > ul > li > ul > li {
    height: 28px;
    line-height: 28px;
    position: relative;
}

.nav > ul > li > ul > li .line {
    position: absolute;
    left: 39px;
    top: 22px;
    height: 30px;
    border-left: solid 1px #f5f5f5;
}

.nav > ul > li > ul > li a {
    display: block;
    color: #222;
    padding-left: 10px;
    background: url(../image/img/circle1.png) 12px center no-repeat;
    text-indent: 17px;
}

.nav > ul > li > ul > li a span {
    padding-right: 20px;
}

.nav > ul > li > ul > li.hover a, .nav > ul > li > ul > li a:hover {
    color: #2284e6;
    background-color: #DAEDFF;
    background-image: url(../image/img/circle2.png);
}

/*三级菜单*/
.nav > ul > li > ul > li.has-child {
    height: auto;
    font-size: 13px;
}

.nav > ul > li > ul > li > ul > li {
    height: 30px;
    line-height: 30px;
    position: relative;
}

.nav > ul > li > ul > li > ul > li .line {
    position: absolute;
    left: 54px;
    top: 18px;
    height: 30px;
    border-left: solid 1px #f5f5f5;
}

.nav > ul > li > ul > li > ul > li a {
    display: block;
    color: #222;
    padding-left: 48px;
    background: url(../image/img/circle1.png) 52px center no-repeat;
    text-indent: 20px;
}

.nav > ul > li > ul > li .inactives_3 {
    color: #4285f4;
    border-color: #4285f4;
}

.nav > ul > li > ul > li > ul > li.hover a, .nav > ul > li > ul > li > ul > li a:hover {
    color: #4285f4;
    background-image: url(../image/img/circle2.png);
}

.playlist {
    width: 100%;
    height: 100%;
    font-size: 13px;
    overflow-y: auto;
    overflow-x: hidden;
}

.playlist li {
    height: 24px;
    line-height: 24px;
    color: #222;
    cursor: pointer;
    white-space: nowrap;
    /*text-overflow: ellipsis;*/
    overflow: hidden;
}

.playlist li:hover, .playlist .hover {
    color: #0373FF;
    background: #ffffff;
}

.player {
    height: 32px;
    padding-top: 14px;
    background: #0373FF;
    text-align: center;
}

.player a {
    padding: 0 6px;
}

.route{
    transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -ms-transform: rotate(180deg);
    -o-transform: rotate(180deg);
}

.right-body .searchForm {
    font-size: 13px;
    background: #fff;
    padding: 5px;
    margin-bottom: 10px;
}

.searchForm li {
    line-height: 35px;
}

.searchForm label {
    display: inline-block;
    width: 65px;
    text-align: right;
    padding-right: 5px;
}

.searchForm input {
    width: 90px;
    height: 26px;
}

.searchForm select {
    width: 90px;
}

.searchForm li:last-child {
    text-align: center;
}

.resBody {
    background: #FFF;
    border-radius: 4px;
    overflow: hidden;
}

.resBody label {
    display: block;
    width: 100%;
    height: 26px;
    line-height: 26px;
    background: #0373FF;
    text-align: center;
    color: #fff;
}

.doclist {
    width: 100%;
    height: 100%;
    padding: 5px 0px;
    font-size: 13px;
    overflow-y: auto;
    overflow-x: hidden;
}

.doclist li {
    height: 28px;
    line-height: 28px;
    color: #222;
    background: #fff;
    cursor: pointer;
    white-space: nowrap;
    /*text-overflow: ellipsis;*/
    overflow: hidden;
}

.doclist li:hover, .doclist .hover {
    color: rgba(3,115,255,1);
    background: #f3f3f3;
}

.pager {
    height: 28px;
    padding: 6px 0px 0px 2px;
    background: #0373FF;
}